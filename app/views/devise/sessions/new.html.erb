
<center>
<div class="container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-signin') do |f| %>

      <h2 class="form-signin-heading">Sign In</h2>
      <div class="form-signin">
<label for="inputEmail" class="sr-only">Email address</label>

    <%= f.email_field :email, autofocus: true, placeholder: "email", id: "inputEmail", class: "form-control" %>
</div>
  
  <div class="form-signin">
   
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", id: "inputPassword", class: "form-control"%>
  </div>

 <br>       

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
<br>	
  <% end -%>

  <div class="actions">
  
    <%= f.submit "Log in",class: "btn btn-info" %>
  </div>
  <br>

<% end %>
  <%= render "devise/shared/links" %>


</div>
</center>