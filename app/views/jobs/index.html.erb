<h1><%= @job.description %></h1>
<div class="container">
  <div class="row">
    <!-- Card Projects -->
    <div class="col-md-6 col-md-offset-3">
      <div class="card">
        <div class="card-image">
          <% if %>
          <img class="img-responsive" src="http://zoarchurch.co.uk/content/pages/uploaded_images/91.png">
              <%else%>
          <img class="img-responsive" src="">
               <% end %>
        </div>

        <div class="card-content">
          <span class="card-title">#</span>
          <p>#</p>
        </div>

        <div class="card-action">
          <a href="/jobs/:id" target="new_blank">Info</a>

        </div>
      </div>
    </div>
  </div>
</div>


